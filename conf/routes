# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# API Endpoints
#GET     /users                          controllers.UserController.getAllUsers
GET     /users/:id                      controllers.UserController.getUser(id: String)

#POST    /users/:userId/user/:studioId   controllers.UserController.create(userId: Int, studioId: Int)
#GET     /users/:userId/user/:studioId   controllers.UserController.find(userId: Int, studioId: Int)

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index

# Swagger docs
GET       /                           controllers.HomeController.redirectToDocs
GET       /swagger.json               controllers.ApiHelpController.getResources
GET       /api-docs                   controllers.HomeController.redirectToDocs

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
